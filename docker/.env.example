# ===========================================
# E-Commerce Microservices Environment File - EXAMPLE
# ===========================================
# Copy this file to .env and modify the values

# ===========================================
# MySQL Master-Slave Cluster
# ===========================================
MYSQL_MASTER_PASSWORD=CHANGE_ME_MASTER_PASSWORD
MYSQL_SLAVE1_PASSWORD=CHANGE_ME_SLAVE1_PASSWORD  
MYSQL_SLAVE2_PASSWORD=CHANGE_ME_SLAVE2_PASSWORD

# MySQL Replication User
MYSQL_REPL_USER=repl_user
MYSQL_REPL_PASSWORD=CHANGE_ME_REPLICATION_PASSWORD

# ===========================================
# Redis
# ===========================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# ===========================================
# MongoDB
# ===========================================
MONGO_USERNAME=ecommerce
MONGO_PASSWORD=CHANGE_ME_MONGO_PASSWORD
MONGO_DB_NAME=ecommerce_inventory

# ===========================================
# HashiCorp Vault
# ===========================================
# Leave empty - will be set after vault initialization
VAULT_TOKEN=

# ===========================================
# PayPal (for payment-service)
# ===========================================
PAYPAL_CLIENT_ID=your-paypal-client-id-from-developer-dashboard
PAYPAL_CLIENT_SECRET=your-paypal-client-secret-from-developer-dashboard
PAYPAL_TUNNEL_URL=https://your-ngrok-or-tunnel-url.com